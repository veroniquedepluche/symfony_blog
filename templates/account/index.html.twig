{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
<h1>Profil : {{ app.user.username }}</h1>

 {{ form_start(profile_form) }} 

    {{ form_row(profile_form.email, { label: 'My address:' }) }}
    {{ form_row(profile_form.plainPassword.first, { label: 'Update password:' }) }}
    {{ form_row(profile_form.plainPassword.second, { label: 'Repeat password:' }) }}

    <button type="submit" class="btn btn-success">
        Register
    </button>
        
{{ form_end(profile_form) }}
        
{% endblock %}
